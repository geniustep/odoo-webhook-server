<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- User Sync State - Tree View -->
    <record id="view_user_sync_state_tree" model="ir.ui.view">
        <field name="name">user.sync.state.tree</field>
        <field name="model">user.sync.state</field>
        <field name="arch" type="xml">
            <tree string="User Sync States" create="0" delete="1">
                <field name="user_id"/>
                <field name="device_id"/>
                <field name="app_type"/>
                <field name="last_event_id"/>
                <field name="last_sync_time"/>
                <field name="sync_count"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- User Sync State - Form View -->
    <record id="view_user_sync_state_form" model="ir.ui.view">
        <field name="name">user.sync.state.form</field>
        <field name="model">user.sync.state</field>
        <field name="arch" type="xml">
            <form string="User Sync State">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="device_id"/>
                            <field name="app_type"/>
                        </group>
                        <group>
                            <field name="last_event_id"/>
                            <field name="last_sync_time"/>
                            <field name="sync_count"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- User Sync State - Search View -->
    <record id="view_user_sync_state_search" model="ir.ui.view">
        <field name="name">user.sync.state.search</field>
        <field name="model">user.sync.state</field>
        <field name="arch" type="xml">
            <search string="Search Sync States">
                <field name="user_id"/>
                <field name="device_id"/>
                <field name="app_type"/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="App Type" name="group_app_type" context="{'group_by': 'app_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for User Sync State -->
    <record id="action_user_sync_state" model="ir.actions.act_window">
        <field name="name">User Sync States</field>
        <field name="res_model">user.sync.state</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sync states found!
            </p>
            <p>
                User sync states are created automatically when users sync via the API.
            </p>
        </field>
    </record>

    <!-- Menu Item for User Sync State -->
    <menuitem
        id="menu_user_sync_state"
        name="Sync States"
        parent="menu_webhook_root"
        action="action_user_sync_state"
        sequence="20"/>

</odoo>
